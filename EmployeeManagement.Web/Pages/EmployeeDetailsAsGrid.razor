@page "/employeedetailsasgrid"
@page "/employeedetailsasgrid/{id}"

@inherits EmployeeDetailsBase

@if (Employee == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="form-group row">
        <label for="fullName" class="col-sm-2 col-form-label">
            Full Name
        </label>
        <div class="col-sm-10">
            <h1>@Employee.FirstName @Employee.LastName <h1>@Coordinates</h1></h1>
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <h4> @Employee.Email</h4>

        </div>

    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <h4>@(Employee.Department==null?"N/A":Employee.Department.DepartmentName)</h4>
        </div>
    </div>
    <div class="form-group row">
        <div class="card-footer text-right @CssClass">
            <a href="/" class="btn btn-primary">Back</a>
            <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-primary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
        </div>
    </div>
       
}