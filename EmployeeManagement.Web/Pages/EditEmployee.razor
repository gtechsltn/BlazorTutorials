@page "/editemployee/{Id}"
@page "/editemployee/"
@using SSS.Components
@using EmployeeManagement.Models
@inherits EditEmployeeBase
 
<EditForm Model="@EditEmployee" OnValidSubmit="HandleValidSubmit">
    <h1>@PageHeaderText</h1>
    <hr />
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="EditEmployee.FirstName" />
            <ValidationMessage For="@(()=>EditEmployee.FirstName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Last Name"
                       @bind-Value="EditEmployee.LastName" />
            <ValidationMessage For="@(()=>EditEmployee.LastName)" />

        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
                       @bind-Value="EditEmployee.Email" />
            <ValidationMessage For="@(()=>EditEmployee.Email)" />

        </div>
    </div>
    <div class="form-group row">
        <label for="confirmEmail" class="col-sm-2 col-form-label">
            Confirm Email
        </label>
        <div class="col-sm-10">
            <InputText id="confirmEmail" class="form-control"
                       @bind-Value="EditEmployee.ConfirmEmail" />
            <ValidationMessage For="@(() => EditEmployee.ConfirmEmail)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" @bind-Value="@EditEmployee.DepartmentId" class="form-control">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                }
            </InputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="@EditEmployee.Gender" class="form-control">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    @if(Employee.EmployeeId >0){
    <button class="btn btn-danger" type="button" @onclick="Delete_Click">Delete</button>
    }
</EditForm>